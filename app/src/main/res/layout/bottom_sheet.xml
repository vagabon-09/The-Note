<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="10dp"
    android:layout_height="@dimen/_100sdp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/_100sdp"
       android:orientation="horizontal"
       android:layout_gravity="center"
       android:padding="@dimen/_5sdp"
       android:gravity="center">


       <View
           android:background="@drawable/color_panel"
           android:layout_width="@dimen/_30sdp"
           android:layout_height="@dimen/_30sdp"
           android:layout_marginEnd="@dimen/_10sdp"
           android:id="@+id/black_color_id"/>


       <View
           android:layout_marginEnd="@dimen/_10sdp"
           android:background="@drawable/red_circle"
           android:layout_width="@dimen/_30sdp"
           android:layout_height="@dimen/_30sdp"
           android:id="@+id/red_color_id"/>


       <View
           android:layout_marginEnd="@dimen/_10sdp"
           android:background="@drawable/yellow"
           android:layout_width="@dimen/_30sdp"
           android:layout_height="@dimen/_30sdp"
           android:id="@+id/yellow_color_id"/>


 <View
           android:layout_marginEnd="@dimen/_10sdp"
           android:background="@drawable/green_circle"
           android:layout_width="@dimen/_30sdp"
           android:layout_height="@dimen/_30sdp"
           android:id="@+id/green_color_id"/>


 <View
           android:layout_marginEnd="@dimen/_10sdp"
           android:background="@drawable/orange_circle"
           android:layout_width="@dimen/_30sdp"
           android:layout_height="@dimen/_30sdp"
           android:id="@+id/orange_color_id"/>



 <View
           android:layout_marginEnd="@dimen/_10sdp"
           android:background="@drawable/white_circle"
           android:layout_width="@dimen/_30sdp"
           android:layout_height="@dimen/_30sdp"
           android:id="@+id/white_color_id"/>





   </LinearLayout>


</ScrollView>