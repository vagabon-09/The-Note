<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardViewBtn"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:layout_weight="1"
    android:background="@android:color/transparent"
    android:elevation="@dimen/_10sdp"
    app:cardElevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout

        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@android:color/transparent"
            android:id="@+id/NoteBtnId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/NoteBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                card_view:ignore="UselessParent">

                <TextView
                    android:id="@+id/s_note_title_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_30sdp"
                    android:text="@string/title_note_making_page"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/pin_black"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_4sdp"
                android:contentDescription="@string/pin_note" />

        </RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>